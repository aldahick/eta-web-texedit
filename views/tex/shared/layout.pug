extends ../../../../cre-web-shared/views/shared/layout.pug

mixin navbar()
    nav.navbar.navbar-default#navbar-parent
        div.container
            div.navbar-header
                button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar")
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="/tex/index") TexEdit
            div.navbar-collapse.collapse
                ul.nav.navbar-nav
                    each name, url in navbarPages
                        - var attrs = ("/tex/" + url === mvcPath) ? { class: "active" } : {};
                        li&attributes(attrs)
                            a(href="/tex/" + url) #{name}

block body
    +navbar()
    div.row.parent-row
        div.col-md-8.col-md-offset-2.col-xs-10.col-xs-offset-1#body-content
            block tex_body
